<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/small_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/border_only"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/banhmi_img"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/banhmi" />

        <TextView
            android:id="@+id/b_nh_m_vi_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/b_nh_m_vi_t"
            android:textSize="18sp"
            android:fontFamily="@font/abeezee"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/text_content"
            android:layout_width="168dp"
            android:layout_height="20dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/star_rating"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_star">

            </ImageView>

            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/star_rating"
                android:gravity="center_vertical"
                android:text="4.8" />

            <ImageView
                android:id="@+id/ellipse_"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/some_id"
                android:background="@drawable/ellipse" />

            <TextView
                android:id="@+id/title"
                android:layout_width="98dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/ellipse_"
                android:gravity="center_vertical"
                android:lineSpacingExtra="2sp"
                android:text="@string/vi_t_nam"
                android:textSize="12sp"
                android:fontFamily="@font/abeezee"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>